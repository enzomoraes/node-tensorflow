{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es6", "ES2019"],
    "module": "commonjs",
    "rootDir": "src",
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "declaration": true
  }
}
